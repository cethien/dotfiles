{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "flamingo": "#f2cdcd",
    "pink": "#f5c2e7",
    "mauve": "#cba6f7",
    "red": "#f38ba8",
    "maroon": "#eba0ac",
    "peach": "#fab387",
    "yellow": "#f9e2af",
    "green": "#a6e3a1",
    "teal": "#94e2d5",
    "sky": "#89dceb",
    "sapphire": "#74c7ec",
    "blue": "#89B4FA",
    "lavender": "#B4BEFE",
    "white": "#cdd6f4",

    "os" : "p:teal",
    "session" : "p:mauve",
    "path" : "p:blue",
    "git" : "p:yellow",
    "shell" : "p:peach",
    "root" : "p:red",
    "text" : "p:white"
  },

  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:os",
          "template": "{{ .Icon }} "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:session",
          "template": "{{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "properties": {
            "style": "full",
            "home_icon": "~"
          },
          "style": "plain",
          "foreground": "p:path",
          "template": "{{ .Path }}"
        },
        {
          "type": "git",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 ",
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{ .HEAD }} ",
          "foreground": "p:git",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}##f38ba8{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ]
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:shell",
          "template": "{{ .Name }} "
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:root",
          "template": "\u0021"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:text",
          "template": "\uf105"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}
