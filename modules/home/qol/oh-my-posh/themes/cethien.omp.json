{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",

  "palette": {
    "white":"#A9B1D6",
    "lavender":"#BB9AF7",
    "green":"#9ECE6A",
    "skyblue":"#2AC3DE",
    "cyan":"#B4F9F8",
    "violet":"#BB9AF7",
    "red":"#F7768E",
    "yellow":"#0DB9D7",

    "session":"p:violet",
    "path":"p:skyblue",
    "git":"p:lavender",
    "shell":"p:green",
    "root":"p:red",
    "text":"p:white",
    "exitcode":"p:red"
  },

  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:session",
          "template": "{{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "properties": {
            "style": "full",
            "home_icon": "~"
          },
          "style": "plain",
          "foreground": "p:path",
          "template": "{{ .Path }}"
        },
        {
          "type": "git",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 ",
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{ .HEAD }} ",
          "foreground": "p:git",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#F7768E{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FF4500{{ end }}",
            "{{ if gt .Ahead 0 }}#BB9AF7{{ end }}",
            "{{ if gt .Behind 0 }}#BB9AF7{{ end }}"
          ]
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:shell",
          "template": "{{ .Name }} "
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:root",
          "template": "\u0021"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:text",
          "template": "\uf105"
        }
      ],
      "type": "prompt"
    }
  ],

  "final_space": true,
  "version": 3
}

